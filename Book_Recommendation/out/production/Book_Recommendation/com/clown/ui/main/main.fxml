   <children>
      <JFXDrawer fx:id="drawer" defaultDrawerSize="150.0" resizableOnDrag="true" resizeContent="true" styleClass="jfx-drawer" />
      <AnchorPane fx:id="rootAnchorPane" prefHeight="200.0" prefWidth="200.0">
         <children>
            <AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
               <children>
                  <JFXTabPane fx:id="mainTabPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <tabs>
                        <Tab fx:id="SearchRecomTab" text="Search / Recommder" onSelectionChanged="#searchRecTabChanged">
                           <content>
                              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                 <children>
                                    <HBox prefHeight="540.0" prefWidth="1100.0">
                                       <children>
                                          <VBox prefHeight="540.0" prefWidth="550.0">
                                             <children>
                                                <HBox alignment="CENTER" prefHeight="140.0" prefWidth="550.0">
                                                    <children>
                                                        <FontAwesomeIconView glyphName="BOOK" size="30">
                                                            <HBox.margin>
                                                                <Insets right="20.0" />
                                                            </HBox.margin>
                                                        </FontAwesomeIconView>
                                                        <FontAwesomeIconView glyphName="BOOK" size="30" visible="false" />
                                                        <JFXComboBox fx:id="searchComboBox" editable="true" promptText="BookName / Author / Book ID" visibleRowCount="5" />
                                                    </children>
                                                </HBox>
                                                <HBox prefHeight="400.0" prefWidth="550.0">
                                                    <children>
                                                        <TableView fx:id="recommendTableView" prefHeight="400.0" prefWidth="550.0" minWidth="550.0" >
                                                            <columns>
                                                                <TableColumn fx:id="recCol1" />
                                                                <TableColumn fx:id="recCol2"/>
                                                                <TableColumn fx:id="recCol3"/>
                                                                <TableColumn fx:id="recCol4"/>
                                                                <TableColumn fx:id="recCol5"/>
                                                                <TableColumn fx:id="recCol6"/>
                                                                <TableColumn fx:id="recCol7"/>
                                                            </columns>
                                                        </TableView>
                                                    </children>
                                                </HBox>
                                             </children>
                                          </VBox>
                                           <StackPane>
                                               <VBox fx:id="previewVBox" alignment="CENTER" prefHeight="540.0" prefWidth="550.0" >
                                                   <ImageView fx:id="bookImageView" onMouseClicked="#onMouseClickedImage" >
                                                       <VBox.margin>
                                                           <Insets top="40.0" bottom="40.0"/>
                                                       </VBox.margin>
                                                   </ImageView>
                                                   <Text fx:id="preViewText1" text="preViewText1"/>
                                                   <Text fx:id="preViewText2" text="preViewText3"/>
                                                   <Text fx:id="preViewText3" text="preViewText3"/>
                                                   <Text fx:id="preViewText4" text="preViewText4"/>
                                                   <Text fx:id="preViewText5" text="preViewText5"/>
                                                   <Text fx:id="preViewText6" text="preViewText6"/>
                                                   <JFXTextArea fx:id="preViewTextArea"/>
                                                   <TextArea fx:id="preViewTextArea1"/>
                                                   <TextField fx:id="preViewTextField" />
                                                   <VBox.margin>
                                                       <Insets bottom="40.0" />
                                                   </VBox.margin>
                                               </VBox>
                                           </StackPane>
                                       </children>
                                    </HBox>
                                 </children></AnchorPane>
                           </content>
                        </Tab>
                        <Tab fx:id="ReadingTab" text="Reading / Read" onSelectionChanged="#ReadingTabChanged">
                        </Tab>
                         <Tab fx:id="EvaluateTab" text="Evaluation History" onSelectionChanged="#EvaluateTabChanged">
                         </Tab>
                     </tabs>
                  </JFXTabPane>
                  <!--<JFXHamburger fx:id="hamburger" styleClass="jfx-hamburger-icon" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="75.0" />-->
               </children>
            </AnchorPane>
             <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                 <menus>
                     <Menu mnemonicParsing="false" text="File">
                         <items>
                             <MenuItem mnemonicParsing="false" text="Modify" onAction="#handleModify"/>
                             <MenuItem mnemonicParsing="false" text="Exit" onAction="#handleExit"/>
